{
  "compilerOptions": {
    "target": "ES6",  
    "module": "ESNext",
    "lib": ["DOM", "ES6"],
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true  // Enables use of tslib for helper functions
  },
  "include": ["src/**/*.ts", "src/options.js"]
}
